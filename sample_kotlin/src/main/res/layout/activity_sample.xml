<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/subscribe_resuming_btn"
        android:text="Subscribe Resuming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/subscribe_non_resuming_btn"
        android:text="Subscribe Non Resuming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/subscribe_authorized_btn"
        android:text="Subscribe Private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/unsubscribe"
        android:text="Unsubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/get_request_btn"
        android:text="GET request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/get_request_authorized_btn"
        android:text="GET request Private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>